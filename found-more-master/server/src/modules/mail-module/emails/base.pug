//- base.pug

//- Example mixin
mixin headline(text)
  h1= text

doctype transitional
head
  meta(name='viewport' content='width=device-width')
  meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
  link(rel="stylesheet" href="/style.css" data-inline media="all" type="text/css")
table.more-header
  tr
    td.more-logo
      img(src="data:image/jpg;base64,")
table.body-wrap
  tr
    td
    td.container(width='600')
      .content
        table.main(width='100%' cellpadding='0' cellspacing='0')
          tr
            td.content-wrap
              table(width='100%' cellpadding='0' cellspacing='0')
                tr
                  td.content-block
                    block content
                tr
                  td.content-block
                    block footer
                      p All the best,
                      p Found
                        br
                        if user.brand.contactPerson
                          a(href="mailto:"+user.brand.contactPerson.email) #{ user.brand.contactPerson.email }
                          if user.brand.contactPerson.phoneNumber
                            |  | 
                            a(href="tel:"+user.brand.contactPerson.phoneNumber) #{ user.brand.contactPerson.phoneNumber }
        .footer
          table(width='100%')
            tr
              td.aligncenter.content-block
                | Edit your email preferences 
                a(href=getClientEmailPreferencesLink(user.brand.domain)) here
                | .
    td